<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="320dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    tools:ignore="MissingDefaultResource"
    android:background="@drawable/card_view_bg"
    android:layout_marginLeft="20dp"
    android:layout_marginBottom="10dp"
    android:layout_marginRight="0dp"
    android:paddingRight="0dp">
    <androidx.cardview.widget.CardView
        android:layout_marginLeft="20dp"
        android:layout_height="wrap_content"
        android:layout_width="280dp"
        android:layout_marginRight="0dp"
        android:paddingRight="0dp"
        card_view:cardPreventCornerOverlap="false"
        app:cardElevation="0dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"

            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_weight="1"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                >
                <ImageView
                    android:id="@+id/imageFood"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/food_large"
                    android:background="@drawable/food_shape"
                    android:layout_gravity="center_vertical"
                    />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    >
                    <TextView
                        android:id="@+id/titleFood"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Soupe de possion"
                        android:textSize="14dp"
                        android:fontFamily="@font/poppins_regular"
                        android:textStyle="bold"
                        />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="20dp"
                            android:padding="0dp"
                            android:src="@drawable/stars"
                            android:layout_marginLeft="-5dp"
                            />
                    </LinearLayout>
                    <TextView
                        android:id="@+id/descriptionFood"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Description de la soupe ici et une autre description aussi"
                        android:textSize="12dp"
                        android:layout_marginLeft="2dp"
                        android:fontFamily="@font/poppins_regular"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        >
                        <TextView
                            android:id="@+id/priceFood"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="300 DA"
                            android:textSize="12dp"
                            android:fontFamily="@font/poppins_regular"
                            android:textStyle="bold"
                            android:layout_marginLeft="2dp"
                            android:layout_weight="1"
                            />
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            >

                            <Button
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_weight="1"
                                android:background="@drawable/add_button_food_item" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>